@page
@model FoxholeIntelboard.Pages.Materials.DetailsModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Http
@{
    ViewData["Title"] = "Details";
    var demoRole = Http.HttpContext.Request.Cookies["demoRole"]
              ?? IntelboardCore.Models.DemoUser.Role;
}
@if (demoRole == "Admin")
{
    <h1>Details</h1>
    <div>
        <h4>Material</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">

                @Html.DisplayNameFor(model => model.Material.CrateAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Material.CrateAmount)
            </dd>
            <dt class="col-sm-2">

                @Html.DisplayNameFor(model => model.Material.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Material.Name)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Material.Id">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
}
else
{
    <h4>You don't have permission to be here</h4>
    <a href="../Index">Go back</a>
}
