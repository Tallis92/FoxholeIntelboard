@page
@model FoxholeIntelboard.Pages.Materials.EditModel

<h4>Material</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Material.Id" />
            <div class="form-group">
                
                <label asp-for="Material.Name" class="control-label"></label>
                <input asp-for="Material.Name" class="form-control" />
                <span asp-validation-for="Material.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Material.ConversionRate" class="control-label"></label>
                <input asp-for="Material.ConversionRate" class="form-control" />
                <span asp-validation-for="Material.ConversionRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Material.ItemName" class="control-label"></label>
                <input asp-for="Material.ItemName" class="form-control" />
                <span asp-validation-for="Material.ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
