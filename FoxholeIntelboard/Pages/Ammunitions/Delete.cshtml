@page
@model FoxholeIntelboard.Pages.Ammunitions.DeleteModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor Http
@{
    ViewData["Title"] = "Delete";
    var demoRole = Http.HttpContext.Request.Cookies["demoRole"]
                 ?? IntelboardCore.Models.DemoUser.Role;
}
@if(demoRole == "Admin")
{
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Ammunition</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ammunition.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ammunition.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ammunition.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ammunition.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ammunition.CrateAmount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ammunition.CrateAmount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ammunition.DamageType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ammunition.DamageType)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Ammunition.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
}
else
{
    <h4>You don't have permission to be here</h4>
    <a href="../Index">Go back</a>
}
